<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list1"
        android:name="com.example.random_menu.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="100dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".Groups.GroupsRecycleFragment"
        tools:listitem="@layout/item_elem_checkbox_fragment" />

<View
    android:id="@+id/close_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@null"
    android:scaleY="0.0"
    android:visibility="invisible" />

<LinearLayout
    android:id="@+id/more_item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|bottom"
    android:background="@drawable/back_item"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="invisible"
    android:padding="10dp"
    android:scaleY="0.0"
    android:layout_marginBottom="100dp"
    android:layout_marginTop="60dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="60dp">


    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Добавить"
        android:background="@drawable/back_item"/>
    <Button
        android:id="@+id/submit_button1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Добавить"
        android:background="@drawable/back_item"/>
    <Button
        android:id="@+id/submit_button2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Добавить"
        android:background="@drawable/back_item"/>
    <Button
        android:id="@+id/submit_button3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Добавить"
        android:background="@drawable/back_item"/>
    <Button
        android:id="@+id/submit_button4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Добавить"
        android:background="@drawable/back_item"/>




</LinearLayout>

</FrameLayout>
